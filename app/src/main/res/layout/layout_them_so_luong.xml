<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75080B">

    <EditText
        android:id="@+id/editLoaiMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Số Lượng"
        android:textColor="#FFFFFF"
        android:textColorHint="#ACAC91"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <Button
        android:id="@+id/btnThemLoaiMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:text="Thêm"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editLoaiMonAn"
        app:layout_constraintStart_toStartOf="@+id/editLoaiMonAn"
        app:layout_constraintTop_toBottomOf="@+id/editLoaiMonAn"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>